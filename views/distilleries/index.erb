<h5>DISTILLERIES/SUPPLIERS</h5>
<hr>
<% @distilleries.each do |distillery| %>

<p>Name: <%= distillery.name() %></p>
<p>Region: <%= distillery.region() %></p>
<h5><a href="/distilleries/<%= distillery.id %>">SHOW DISTILLERY</a></h5>
<p>
      <form action="/distilleries/<%= distillery.id %>/delete" method="POST">
        <input class="btn btn-danger" type="submit" value="DELETE" />
      </form>
</p>
<hr />
<% end %>
